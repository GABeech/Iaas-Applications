{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "type": "string",
            "metadata": {
                "description": "The name of the existing HDInsight cluster"
            }
        },
        "galleryPackageIdentity": {
            "type": "string",
            "metadata": {
                "description" : "Any non-empty value is accepted. After the package is published, this parameter will be used to link the application install to the details about the application in the marketplace."
            },
            "defaultValue": "EmptyNode"
        },
        "edgeNodeSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the edge node that hosts the application"
            },
            "defaultValue": "Standard_D3",
            "allowedValues": [
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4"
            ]
        },
        "edgeNodePrefix": {
            "type": "string",
            "metadata": {
                "description": "Edgenode prefix"
            },
            "defaultValue": "new"
        },
        "instanceCount": {
            "type": "int",
            "metadata": {
                "description": "Number of instances"
            },
            "defaultValue": 1
        },
        "edgeNodeSetupScriptUri": {
            "type": "string",
            "metadata": {
                "description": "Edgenode setup script"
            },
            "defaultValue": "https://raw.githubusercontent.com/ezubatov/Iaas-Applications/master/EmptyNode/scripts/EmptyNodeSetup.sh"
        }
    },
    "variables": {
        "clusterApiVersion": "2015-03-01-preview",
        "applicationName": "[concat(parameters('edgeNodePrefix'), '-', 'edgenode')]"
    },
    "resources": [{
        "name": "[concat(parameters('clusterName'),'/', variables('applicationName'))]",
        "type": "Microsoft.HDInsight/clusters/applications",
        "apiVersion": "[variables('clusterApiVersion')]",
        "properties": {
            "marketPlaceIdentifier": "[parameters('galleryPackageIdentity')]",
            "computeProfile": {
                "roles": [{
                    "name": "edgenode",
                    "targetInstanceCount": "[parameters('instanceCount')]",
                    "hardwareProfile": {
                        "vmSize": "[parameters('edgeNodeSize')]"
                    }
                }]
            },
            "installScriptActions": [{
                "name": "[concat('emptynode','-' ,uniquestring(variables('applicationName')))]",
                "uri": "[parameters('edgeNodeSetupScriptUri')]",
                "roles": ["edgenode"]
            }],
            "uninstallScriptActions": [],
            "httpsEndpoints": [],
            "applicationType": "CustomApplication"
        }
    }],
    "outputs": {
        "application": {
            "type": "object",
            "value": "[reference(resourceId('Microsoft.HDInsight/clusters/applications/',parameters('clusterName'), variables('applicationName')))]"
        }
    }
}
